<h1>Burgers</h1>

<h2>New Orders</h2>

<ul>
  {{#each goodBurgers}}
    {{#unless devoured}}
      {{> goodBurgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Orders are done</h2>

<ul>
  {{#each goodBurgers}}
    {{#if devoured}}
      {{> goodBurgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Done
  </div>

  <button type="submit">Add Burger</button>
</form>

